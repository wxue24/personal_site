---
title: Work
layout: layouts/base.njk
permalink: /work/
---

{% set side = cycler('right', "left") %}

<div class="m-10">
  <h1 class="text-center text-3xl py-10 text-forest">
    Work, Leadership, and Professional Development
  </h1>
  <div class="bg-white text-forest">
    <div class="container mx-auto flex flex-row justify-center md:flex-row">
      <div class="lg:w-full sticky">
        <div class="container mx-auto w-full h-full">
          <div class="relative wrap overflow-hidden p-10 h-full">
            <div class="bg-sleek absolute h-full w-1 lg:right-1/2"></div>
            <div class="bg-sleek absolute h-full w-1 lg:left-1/2"></div>
            {% for w in work %} {% if side.next() == "right" %}
            <div
              class="p-5 lg:mb-8 lg:flex lg:justify-between items-center w-full"
            >
              <div class="order-1 w-5/12"></div>
              <div class="order-1 lg:w-5/12 px-1 py-4 text-left">
                <p class="mb-3 text-base text-marine">{{ w.time }}</p>
                <h4 class="mb-3 font-bold text-lg md:text-2xl">
                  {{ w.title }}
                </h4>
                <div class="flex space-x-5">
                  {% for tag in w.tags %}
                  <p class="px-3 py-1 bg-feather rounded-full">{{ tag }}</p>
                  {% endfor %}
                </div>
                <p class="text-sm md:text-base text-black leading-snug">
                  {{ w.description }}
                </p>
              </div>
            </div>
            {% else %}
            <div
              class="
                p-5
                lg:mb-8 lg:flex lg:justify-between
                items-center
                w-full
                lg:flex-row-reverse
              "
            >
              <div class="order-1 w-5/12"></div>
              <div class="order-1 lg:w-5/12 px-1 py-4 text-left lg:text-right">
                <p class="mb-3 text-base text-marine">{{ w.time }}</p>
                <h4 class="mb-3 font-bold text-lg md:text-2xl">
                  {{ w.title }}
                </h4>
                <div class="flex lg:flex-row-reverse lg:space-x-reverse space-x-5">
                  {% for tag in w.tags %}
                  <p class="px-3 py-1 bg-feather rounded-full">{{ tag }}</p>
                  {% endfor %}
                </div>
                <p class="text-sm md:text-base text-black leading-snug">
                  {{ w.description }}
                </p>
              </div>
            </div>
            {% endif %} {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
